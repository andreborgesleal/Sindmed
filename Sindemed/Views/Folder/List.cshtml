@model System.Web.Mvc.PagedList<DWM.Models.Repositories.DocFolderViewModel>

@{
    Layout = null;
}
@if (Model != null)
{
    <div class="row Scroll">
        <div class="col-md-12 column">
            <table class="table table-hover table-bordered table-condensed" style="cursor: pointer">
                <caption></caption>
                <thead style="background-color: #fff1a5">
                    <tr>
                        <th class="text-center">Ação</th>
                        <th>Nome da pasta</th>
                    </tr>
                </thead>
                @foreach (DWM.Models.Repositories.DocFolderViewModel folder in Model)
                {
                    <tr>
                        <td class="col-md-2 col-xs-5 col-sm-5 text-center">
                            <div class="row-clearfix">
                                <div class="col-md-12 col-xs-12 col-sm-12">
                                    <button type="button" class="btn btn-info btn-xs" onclick="window.location='Edit?docFolderId=@folder.docFolderId.ToString()'">Editar</button>
                                    <button type="button" class="btn btn-danger btn-xs" onclick="window.location='Delete?docFolderId=@folder.docFolderId.ToString()'">Excluir</button>
                                </div>
                            </div>
                        </td>
                        <td class="col-md-10 col-xs-7 col-sm-7">
                            @folder.descricao
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    @Html.Partial("Paginacao", Model)
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}


