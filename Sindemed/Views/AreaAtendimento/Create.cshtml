@using Sindemed.Models.Repositories
@using App_Dominio.Repositories
@model Sindemed.Models.Repositories.AreaAtendimentoViewModel
@{
    ViewBag.Title = "Sindmed";
}
@using (Html.BeginForm("Create", "AreaAtendimento", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default" style="margin-top: 10px">
        <div class="panel-heading">
            <h2 class="panel-title">
                Área de Atendimento  <small>Determina os setores ou departamentos dentro da administração onde o associado poderá abrir um chamado.</small>
            </h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <blockquote>
                        <p>
                            Inclusão de Área de Atendimento
                        </p> <small>Informar o nome da área de atendimento e pelo menos um atendente responsável pelo atendimento ao associado neste setor.</small>
                    </blockquote>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group" style="margin-top: 20px">
                        @Html.LabelFor(m => m.descricao, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.descricao, new { @class = "form-control input-sm", @placeholder = "Nome da área de atendimento", @style = "width: 450%" })<br />
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 20px">
                        @Html.LabelFor(m => m.usuario1Id, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <div class="input-group">
                                @Typeahead.InputLn(new TypeaheadRepository()
                                   {
                                       id = "usuario1Id",
                                       text = "nome_usuario",
                                       lovModal = "LovUsuarioModal",
                                       controller = "AreaAtendimento",
                                       descricao = "nome",
                                       values = new SelectListItem()
                                       {
                                           Value = Model.usuario1Id.ToString(),
                                           Text = Model.usuario1Id.nome
                                       },
                                       disableButtons = TempData["operacao"] == "E",
                                       nextField = "usuario1Id"
                                   })
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 20px">
                        @Html.LabelFor(m => m.usuario2Id, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.descricao, new { @class = "form-control input-sm", @placeholder = "Nome da área de atendimento", @style = "width: 450%" })<br />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.codigo, new { @class = "col-md-2 control-label" })
                        <div class="col-md-2">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.codigo, new { @class = "form-control input-sm" })<br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-8">
                    @Html.Partial("_defaultListButtons",
                        new List<ButtonRepository>
                        {
                            new ButtonRepository() {    linkText = "Salvar",
                                                        actionName = "",
                                                        controllerName = "",
                                                        buttonType = "submit"
                                                    } ,
                            new ButtonRepository() {    linkText = "Cancelar",
                                                        actionName = "Browse",
                                                        controllerName = "AreaAtendimento",
                                                        buttonType = "link"
                                                    }
                        })
                </div>
                <div class="col-md-offset-4">
                    ( * ) - Campo de preenchimento obrigatório
                </div>
            </div>
        </div>
    </div>
}




