@model System.Web.Mvc.PagedList<DWM.Models.Repositories.AssociadoGrupoViewModel>

@{
    Layout = null;
}
@if (Model != null)
{
    <div class="row Scroll">
        <div class="col-md-12 column">
            <table class="table table-hover table-bordered table-condensed" style="cursor: pointer">
                <caption></caption>
                <thead style="background-color: #fff1a5">
                    <tr>
                        <th class="text-center hidden-xs">Ação</th>
                        <th>Grupo</th>
                        <th>Associado</th>
                    </tr>
                </thead>
                @foreach (DWM.Models.Repositories.AssociadoGrupoViewModel ag in Model)
                {
                    <tr>
                        <td class="col-md-2 col-xs-6 col-sm-6 hidden-xs text-center">
                            <button type="button" class="btn btn-danger btn-xs" onclick="window.location='Delete?grupoAssociadoId=@ag.grupoAssociadoId&associadoId=@ag.associadoId'">Excluir</button>
                        </td>
                        <td class="col-md-4 col-xs-6 col-sm-6">
                            @ag.descricao
                        </td>
                        <td class="col-md-6 col-xs-6 col-sm-6">
                            @ag.nome
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    @Html.Partial("Paginacao", Model)
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}
