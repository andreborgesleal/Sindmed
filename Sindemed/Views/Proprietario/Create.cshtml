@using App_Dominio.Entidades
@using DWM.Models.Repositories
@using App_Dominio.Repositories
@model DWM.Models.Repositories.ProprietarioViewModel
@{
    ViewBag.Title = new App_Dominio.Security.EmpresaSecurity<SecurityContext>().getEmpresa().nome;
}
@using (Html.BeginForm("Create", "Proprietario", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(info => info.ind_tipo_pessoa, "F")
    <div class="panel panel-default" style="margin-top: 10px">
        <div class="panel-heading">
            <h2 class="panel-title">
                Proprietários <small>Pessoa Física.</small>
            </h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <blockquote>
                        <p>
                            Inclusão de Proprietários 
                        </p> <small>Cadastro dos proprietários de imóveis.</small>
                    </blockquote>
                </div>
                <div class="col-md-12">
                    <div class="form-group" style="margin-top: 20px">
                        @Html.ValidationSummary(false)
                    </div>
                </div>
                <div class="row" style="margin-top: 20px">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.nome, "Nome *", new { @class = "col-md-3 control-label" })
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.nome, new { @class = "form-control input-sm", @Style = "width: 180%; text-transform: uppercase;", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.apto, "Apto *", new { @class = "col-md-3 control-label" })
                            <div class="col-md-3">
                                <div class="input-group">
                                    @Html.DropDownList("apto", new DWM.Models.Enumeracoes.BindDropDownList().Apto("Selecione...", ""), new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.email, "E-mail *", new { @class = "col-md-3 control-label" })
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.email, new { @class = "form-control input-sm", @style = "width: 180%; text-transform: lowercase;", @maxlength = "100" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cpf_cnpj, new { @class = "col-md-3 control-label" })
                            <div class="col-md-3">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.cpf_cnpj, new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.dt_inicio, "Dt.Cadastro *", new { @class = "col-md-3 control-label" })
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.dt_inicio, "DATE", new { identificador = "dt_inicio", readOnly = "false" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.dt_fim, new { @class = "col-md-3 control-label" })
                            <div class="col-md-3">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.dt_fim, "DATE", new { identificador = "dt_fim", readOnly = "false" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.tel_contato1, new { @class = "col-md-3 control-label" })
                            <div class="col-md-3">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.tel_contato1, new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.tel_contato2, new { @class = "col-md-3 control-label" })
                            <div class="col-md-3">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.tel_contato2, new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ind_est_civil, new { @class = "col-md-3 control-label" })
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.DropDownList("ind_est_civil", App_Dominio.Enumeracoes.DropDownListEnum.EstadoCivil("", "Selecione..."), new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.nome_conjuge, new { @class = "col-md-3 control-label" })
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.nome_conjuge, new { @class = "form-control input-sm", @Style = "width: 180%; text-transform: uppercase;", @maxlength = "40" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cpf_cnpj_conjuge, new { @class = "col-md-3 control-label" })
                            <div class="col-md-4">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.cpf_cnpj_conjuge, new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.endereco, new { @class = "col-md-3 control-label" })
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.endereco, new { @class = "form-control input-sm", @Style = "width: 180%;", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.complemento, new { @class = "col-md-3 control-label" })
                            <div class="col-md-6">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.complemento, new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Editor("_cidadeId", "TYPEAHEAD", new
                                               {
                                                   typeahead = new TypeaheadRepository()
                                                       {
                                                           label = "Cidade",
                                                           id = "cidadeId",
                                                           text = "nome_cidade",
                                                           lovModal = "LovCidadeModal",
                                                           controller = "cidade",
                                                           descricao = "nome",
                                                           values = new SelectListItem()
                                                           {
                                                               Value = Model.cidadeId.ToString(),
                                                               Text = Model.nome_cidade
                                                           },
                                                           disableButtons = false,
                                                           nextField = "uf"
                                                       }
                                               })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.uf, new { @class = "col-md-3 control-label" })
                            <div class="col-md-2">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.uf, new { @class = "form-control input-sm", @style = "text-transform: uppercase", @maxlength = "2" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cep, new { @class = "col-md-3 control-label" })
                            <div class="col-md-3">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.cep, new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-8">
                    @Html.Partial("_defaultListButtons",
                        new List<ButtonRepository>
                        {
                            new ButtonRepository() {    linkText = "Salvar",
                                                        actionName = "",
                                                        controllerName = "",
                                                        buttonType = "submit"
                                                    } ,
                            new ButtonRepository() {    linkText = "Cancelar",
                                                        actionName = "Browse",
                                                        controllerName = "Proprietario",
                                                        buttonType = "link"
                                                    }
                        })
                </div>
                <div class="col-md-offset-4">
                    ( * ) - Campo de preenchimento obrigatório
                </div>
            </div>
        </div>
    </div>
}


<script type="text/javascript">
    $('#uf').mask('aa');
    $("#cpf_cnpj").mask("999.999.999-99");
    $("#cpf_cnpj_conjuge").mask("999.999.999-99");
    $("#cep").mask("99999-999");
    $("#tel_contato1").mask("99 9999-9999");
    $("#tel_contato2").mask("99 9999-9999");
</script>