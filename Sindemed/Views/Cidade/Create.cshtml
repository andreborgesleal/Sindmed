
@using Sindemed.Models.Repositories
@using App_Dominio.Repositories
@model Sindemed.Models.Repositories.CidadeViewModel
@{
    ViewBag.Title = "Stock Lite";
}
@using (Html.BeginForm("Create", "Cidade", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default" style="margin-top: 10px">
        <div class="panel-heading">
            <h2 class="panel-title">
                Cidades <small>Ex: Belém, Castanhal, Santarém, etc.</small>
            </h2>
        </div>
        <div class="panel-body">

            @*@Html.ValidationSummary(false)*@
            <div class="row">
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img alt="300x200" src="http://lorempixel.com/600/200/people" />
                        <div class="caption">
                            <h3>
                                Incluir Cidades
                            </h3>
                            <p>
                                Efetua a inclusão de fabricantes dos produtos. O cadastro de fabricantes tem como objetivo organizar os produtos e facilitar a busca pelos clientes.
                            </p>
                            <p>
                                <div class="form-group" style="margin-top: 40px">
                                    @Html.LabelFor(m => m.nome, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.nome, new { @class = "form-control", @placeholder = "Nome do fabricante" })<br />
                                        </div>
                                    </div>
                                    @*<div class="span4" style="background-image: url(~/../../../Content/images/Bank.jpg); background-repeat: no-repeat; background-position-x: 35px; height: 209px;"></div>*@
                                </div>



                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="col-lg-12">
                @Html.Partial("_defaultListButtons",
                new List<ButtonRepository>
                {
                    new ButtonRepository() {    linkText = "Salvar",
                                                actionName = "",
                                                controllerName = "",
                                                buttonType = "submit"
                                            } ,
                    new ButtonRepository() {    linkText = "Cancelar",
                                                actionName = "Browse",
                                                controllerName = "Cidade",
                                                buttonType = "link"
                                            }
                })
            </div>
        </div>
    </div>
}
