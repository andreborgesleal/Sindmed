@model System.Web.Mvc.PagedList<Sindemed.Models.Repositories.CidadeViewModel>
@{
    Layout = null;
}

@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover table-bordered table-condensed" style="cursor: pointer">
                <caption></caption>
                <thead style="background-color: #fff1a5">
                    <tr>
                        <th>Descrição</th>
                    </tr>
                </thead>
                @foreach (Sindemed.Models.Repositories.CidadeViewModel cid in Model)
                {
                    <tr onclick="Move('@cid.cidadeId', '@cid.nome')">
                        <td>
                            <div>
                                @cid.nome
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="margin-bottom: -20px; margin-top: -10px">
            @Html.Partial("Paginacao", Model)
        </div>
    </div>
}


