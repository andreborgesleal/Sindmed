@using App_Dominio.Repositories
@model DWM.Models.Repositories.AtendimentoViewModel
@{
    ViewBag.Title = new App_Dominio.Security.EmpresaSecurity<App_Dominio.Entidades.SecurityContext>().getEmpresa().nome;
    ViewBag.ind_resposta = "N";
}
@using (Html.BeginForm("Fechar", "Atendimento", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-primary" style="margin-top: 10px">
        <div class="panel-heading">
            <h2 class="panel-title">
                Detalhar Chamado <small class="text-white hidden-xs">Exibe o histórico com todas as mensagens de resposta do atendimento.</small>
            </h2>
        </div>
        <div class="panel-body">
            @Html.Partial("_Create", Model)
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-8">
                    @Html.Partial("_defaultListButtons",
                        new List<ButtonRepository>
                        {
                            new ButtonRepository() {    linkText = "Cancelar",
                                                        actionName = "Browse",
                                                        controllerName = (Model.fluxo == "2" ? "Atendimento" : "Chamado"),
                                                        buttonType = "link"
                                                    }
                        })
                </div>
            </div>
        </div>
    </div>
}




