@model System.Web.Mvc.IPagedList  
@{
    Layout= null;
}   

<div class="row">
    <div class="col-md-8">
        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "get" }))
        {
            <div class="input-group">
                @Html.TextBox("desc", "", htmlAttributes: new { @class = "form-control input-sm col-md-8", @placeholder = "Descrição" })
                <div class="input-group-btn">
                    <button type="button" class="btn active btn-sm" onclick="Refresh(0, getPageSize(), '@Model.action', '@Model.DivId')">Buscar</button>
                </div>
            </div>
        }
    </div>
</div>


