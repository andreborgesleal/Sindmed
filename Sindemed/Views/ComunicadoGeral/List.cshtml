@model System.Web.Mvc.PagedList<DWM.Models.Repositories.ComunicacaoViewModel>

@{
    Layout = null;
}
@if (Model != null)
{
    <div class="row Scroll">
        <div class="col-md-12 column">
            <table class="table table-hover table-bordered table-condensed" style="cursor: pointer">
                <caption></caption>
                <thead style="background-color: #fff1a5">
                    <tr>
                        <th class="text-center">Ação</th>
                        <th>Cabeçalho</th>
                        <th class="hidden-xs">Resumo</th>
                    </tr>
                </thead>
                @foreach (DWM.Models.Repositories.ComunicacaoViewModel com in Model)
                {
                    <tr>
                        <td class="col-md-2 col-xs-5 col-sm-2 text-center">
                            <div class="col-md-5 col-xs-6 col-sm-6 text-center">
                                <button type="button" class="btn btn-info btn-xs" onclick="window.location='Edit?comunicacaoId=@com.comunicacaoId'">Editar</button>
                            </div>
                            <div class="col-md-5 col-xs-6 col-sm-6 text-center">
                                <button type="button" class="btn btn-danger btn-xs" onclick="window.location='Delete?comunicacaoId=@com.comunicacaoId'">Excluir</button>
                            </div>
                        </td>
                        <td class="col-md-3 col-xs-7 col-sm-3">
                            <p>@com.cabecalho</p>
                            <small>@com.dt_comunicacao.ToString("dd/MM/yyyy")</small>
                        </td>
                        <td class="col-md-7 col-sm-7 hidden-xs">
                            @com.resumo
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    @Html.Partial("Paginacao", Model)
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}
