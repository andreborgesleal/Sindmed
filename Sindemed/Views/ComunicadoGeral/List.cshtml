@model System.Web.Mvc.PagedList<Sindemed.Models.Repositories.ComunicacaoViewModel>

@{
    Layout = null;
}
@if (Model != null)
{
    <div class="row Scroll">
        <div class="col-md-12 column">
            <table class="table table-hover table-bordered table-condensed" style="cursor: pointer">
                <caption></caption>
                <thead style="background-color: #fff1a5">
                    <tr>
                        <th></th>
                        <th>Data</th>
                        <th>Cabeçalho</th>
                        <th>Resumo</th>
                    </tr>
                </thead>
                @foreach (Sindemed.Models.Repositories.ComunicacaoViewModel com in Model)
                {
                    <tr>
                        <td style="width: 20%">
                            <div class="row-clearfix">
                                <div class="col-md-12">
                                    <div class="btn-group btn-group-xs">
                                        <button class="btn btn-sm" type="button">
                                            <em class="glyphicon glyphicon-edit"></em> @Html.ActionLink("Editar", "Edit", routeValues: new { comunicacaoId = com.comunicacaoId }, htmlAttributes: new { @style = "text-decoration: none; color: #646464" })
                                        </button>
                                        <button class="btn btn-sm" type="button">
                                            <em class="glyphicon glyphicon-remove"></em> @Html.ActionLink("Excluir", "Delete", routeValues: new { comunicacaoId = com.comunicacaoId }, htmlAttributes: new { @style = "text-decoration: none; color: #646464" })
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td style="width: 10%">
                            @com.dt_comunicacao.ToString("dd/MM/yyyy")
                        </td>
                        <td style="width: 10%">
                            @com.cabecalho
                        </td>
                        <td style="width: 70%">
                            @com.resumo
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    @Html.Partial("Paginacao", Model)
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}
