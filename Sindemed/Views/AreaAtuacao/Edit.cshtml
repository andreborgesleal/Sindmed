@using Sindemed.Models.Repositories
@using App_Dominio.Repositories
@model Sindemed.Models.Repositories.AreaAtuacaoViewModel
@{
    ViewBag.Title = "Sindmepa";
}
@using (Html.BeginForm("Edit", "AreaAtuacao", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(info => info.areaAtuacaoId)
    <div class="panel panel-default" style="margin-top: 10px">
        <div class="panel-heading">
            <h2 class="panel-title">
                Área de Atuação  <small>Utilizada no cadastro do associado</small>
            </h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <blockquote>
                        <p>
                            Alteração de Área de Atuação
                        </p> <small>Informar o nome da área de atuação do profissional para ser vinculada à ficha cadastral do associado.</small>
                    </blockquote>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group" style="margin-top: 20px">
                    @Html.ValidationSummary(false)
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group" style="margin-top: 20px">
                        @Html.LabelFor(m => m.descricao, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.descricao, new { @class = "form-control input-sm", @placeholder = "Área onde atua o profissional", @style = "width: 150%" })<br />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.codigo, new { @class = "col-md-2 control-label" })
                        <div class="col-md-2">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.codigo, new { @class = "form-control input-sm" })<br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-8">
                    @Html.Partial("_defaultListButtons",
                        new List<ButtonRepository>
                        {
                            new ButtonRepository() {    linkText = "Salvar",
                                                        actionName = "",
                                                        controllerName = "",
                                                        buttonType = "submit"
                                                    } ,
                            new ButtonRepository() {    linkText = "Cancelar",
                                                        actionName = "Browse",
                                                        controllerName = "AreaAtuacao",
                                                        buttonType = "link"
                                                    }
                        })
                </div>
                <div class="col-md-offset-4">
                    ( * ) - Campo de preenchimento obrigatório
                </div>
            </div>
        </div>
    </div>
}




