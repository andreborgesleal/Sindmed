@using Sindemed.Models.Repositories
@using App_Dominio.Repositories
@model System.Web.Mvc.PagedList<Sindemed.Models.Repositories.AreaAtuacaoViewModel>

@{
    Layout = null;
}
@if (Model != null && Model.Count > 0)
{
    <div class="row Scroll">
        <div class="col-md-12 column">
            <table class="table table-hover table-bordered table-condensed" style="cursor: pointer">
                <caption></caption>
                <thead style="background-color: #fff1a5">
                    <tr>
                        <th></th>
                        <th>Área de Atuação</th>
                        <th>Código</th>
                    </tr>
                </thead>
                @foreach (Sindemed.Models.Repositories.AreaAtuacaoViewModel are in Model)
                {
                    <tr>
                        <td style="width: 20%">
                            <div class="row-clearfix">
                                <div class="col-md-12">
                                    <div class="btn-group btn-group-xs">
                                        <button class="btn btn-sm" type="button">
                                            <em class="glyphicon glyphicon-edit"></em> @Html.ActionLink("Editar", "Edit", routeValues: new { areaAtuacaoId = are.areaAtuacaoId }, htmlAttributes: new { @style = "text-decoration: none; color: #646464" })
                                        </button>
                                        <button class="btn btn-sm" type="button">
                                            <em class="glyphicon glyphicon-remove"></em> @Html.ActionLink("Excluir", "Delete", routeValues: new { areaAtuacaoId = are.areaAtuacaoId }, htmlAttributes: new { @style = "text-decoration: none; color: #646464" })
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            @are.descricao
                        </td>
                        <td>
                            @are.codigo
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    @Html.Partial("Paginacao", Model)
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}
